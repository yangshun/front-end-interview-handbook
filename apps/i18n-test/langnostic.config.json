{
  "provider": "google",
  "localeConfig": {
    "source": "en-US",
    "target": ["zh-CN", "pt-BR"]
  },
  "groups": [
    {
      "name": "app",
      "plugin": "json",
      "paths": [
        {
          "source": "./src/locales/en-US.json",
          "target": "./src/locales/{locale}.json"
        }
      ]
    },
    {
      "name": "blog",
      "plugin": [
        "mdx",
        {
          "frontmatterExcludedKeys": ["author", "published"]
        }
      ],
      "paths": [
        {
          "source": "./src/blog/**/en-US.mdx",
          "target": "./src/blog/**/{locale}.mdx"
        }
      ]
    },
    {
      "name": "docs",
      "plugin": "mdx",
      "paths": [
        {
          "source": "./src/docs/en-US/*.mdx",
          "target": "./src/docs/{locale}/*.mdx"
        }
      ]
    }
  ]
}
