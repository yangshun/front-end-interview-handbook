{
  "localeConfig": {
    "source": "en-US",
    "target": ["zh-CN", "pt-BR"]
  },
  "groups": [
    {
      "name": "App strings",
      "handler": "json",
      "paths": [
        {
          "source": "./src/locales/en-US.json",
          "target": "./src/locales/{locale}.json"
        }
      ]
    },
    {
      "name": "Blog posts",
      "handler": "mdx",
      "paths": [
        {
          "source": "./src/blog/**/en-US.mdx",
          "target": "./src/blog/**/{locale}.mdx"
        }
      ]
    },
    {
      "name": "Docs",
      "handler": "mdx",
      "paths": [
        {
          "source": "./src/docs/en-US/*.mdx",
          "target": "./src/docs/{locale}/*.mdx"
        }
      ]
    }
  ]
}
