{
  "name": "@gfe/figma-plugin",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss --input ./src/styles/input.css --output ./src/styles/output.css",
    "build:js": "build-figma-plugin --typecheck --minify",
    "dev": "npm run build:css && concurrently npm:watch:css npm:watch:js",
    "watch:css": "tailwindcss --input ./src/styles/input.css --output ./src/styles/output.css --watch",
    "watch:js": "build-figma-plugin --typecheck --watch",
    "tsc": "tsc",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^3.2.0",
    "@create-figma-plugin/utilities": "^3.2.0",
    "clsx": "^2.1.1",
    "preact": ">=10",
    "react-icons": "5.4.0",
    "shiki": "^1.6.0"
  },
  "devDependencies": {
    "@gfe/eslint-config": "workspace:*",
    "@create-figma-plugin/build": "^3.2.0",
    "@create-figma-plugin/tsconfig": "^3.2.0",
    "@figma/plugin-typings": "1.90.0",
    "concurrently": ">=8",
    "eslint": "9.26.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.4.1",
    "typescript": "5.8.3"
  },
  "figma-plugin": {
    "capabilities": [
      "inspect"
    ],
    "editorType": [
      "figma",
      "dev"
    ],
    "id": "1377511503285748115",
    "name": "GreatFrontEnd â€“ Figma to Code (HTML, CSS, Tailwind)",
    "main": "src/main.ts",
    "ui": "src/ui.tsx",
    "documentAccess": "dynamic-page",
    "networkAccess": {
      "allowedDomains": [
        "none"
      ]
    }
  }
}
