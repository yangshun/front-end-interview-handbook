{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@gfe/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"],
      "contentlayer/generated": ["../.contentlayer/generated"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts",
    ".contentlayer/generated",
    "langnostic.config.ts",
    "vitest.config.ts"
  ]
}
