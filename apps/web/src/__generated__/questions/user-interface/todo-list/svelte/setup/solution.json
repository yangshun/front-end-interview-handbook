    "/src/App.svelte": {
      "code": "<script context=\"module\">\n  let id = 0;\n  const INITIAL_TASKS = [\n    { id: id++, label: 'Walk the dog' },\n    { id: id++, label: 'Water the plants' },\n    { id: id++, label: 'Wash the dishes' },\n  ];\n</script>\n\n<script>\n  let tasks = INITIAL_TASKS;\n  let newTask = '';\n</script>\n\n<h1>Todo List</h1>\n<div>\n  <input\n    aria-label=\"Add new task\"\n    type=\"text\"\n    placeholder=\"Add your task\"\n    bind:value={newTask} />\n  <div>\n    <button\n      on:click={() => {\n        tasks.push({\n          id: id++,\n          label: newTask.trim(),\n        });\n        tasks = tasks;\n        newTask = '';\n      }}>\n      Submit\n    </button>\n  </div>\n</div>\n<ul>\n  {#each tasks as { id, label } (id)}\n    <li>\n      <span>{label}</span>\n      <button\n        on:click={() => {\n          const index = tasks.findIndex(\n            (task) => task.id === id,\n          );\n          tasks.splice(index, 1);\n          tasks = tasks;\n        }}>\n        Delete\n      </button>\n    </li>\n  {/each}\n</ul>\n"
    },
    "/src/index.js": {
      "code": "import App from './App.svelte';\nimport './styles.css';\n\nconst app = new App({\n  target: document.body,\n});\n\nexport default app;\n"
